<div class="message">
  <div class="grid grid-cols-[minmax(625px,9fr),minmax(20px,0.5fr)] grid-rows-[0.5fr,minmax(125px,5fr)] gap-[0.25em] bg-purple-800 p-3">
    <h3 class="message__username col-span-2 row-start-1 bg-purple-400">
        <!-- Return username if not null -->
        <%#= message !== undefined && message.author_username !== undefined ? message.author_username : "Someone's username" %>
        
        {USERNAME} <!-- Placeholder until server is functional -->
    </h3>
    <div class="col-start-1 row-start-2 bg-purple-400" id="scribble-container">
        <img src="{{FILEPATH}}" alt="{{USERNAME}}'s scribble">
    </div>
    </canvas>
    <script src="js/canvas.js"></script>
    <div class="message__actions col-start-2 row-start-2 bg-purple-400 flex flex-col items-center justify-between py-2">
      <!-- Like button -->
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6">
        <path d="M11.645 20.91l-.007-.003-.022-.012a15.247 15.247 0 01-.383-.218 25.18 25.18 0 01-4.244-3.17C4.688 15.36 2.25 12.174 2.25 8.25 2.25 5.322 4.714 3 7.688 3A5.5 5.5 0 0112 5.052 5.5 5.5 0 0116.313 3c2.973 0 5.437 2.322 5.437 5.25 0 3.925-2.438 7.111-4.739 9.256a25.175 25.175 0 01-4.244 3.17 15.247 15.247 0 01-.383.219l-.022.012-.007.004-.003.001a.752.752 0 01-.704 0l-.003-.001z" />
      </svg>
      <!-- Reply button -->
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 justify-self-end">
        <path stroke-linecap="round" stroke-linejoin="round" d="M9 15L3 9m0 0l6-6M3 9h12a6 6 0 010 12h-3" />
      </svg>
    </div>
  </div>
</div>
